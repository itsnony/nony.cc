---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";
import config from "../config.json";

// Get Content
const projects = (await getCollection("projects")).sort(
  (a, b) => b.data.year - a.data.year,
);
const rants = (await getCollection("rants")).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf(),
);
const writing = (await getCollection("writing")).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf(),
);

const latestRant = rants[0];
const featuredProject = projects[0];
const latestStory = writing[0];

const { profile } = config;
---

<Layout title="Nony | Architect of the Void">
  <main class="home-wrapper">
    <!-- HERO SECTION: USER RESTORED + GRADIENTS -->
    <section class="hero-split">
      <div class="content-side">
        <h1 class="hero-name">
          <span class="gradient-text">{profile.name}</span><span class="dot"
            >.</span
          >
        </h1>

        <p class="hero-bio">{profile.bio}</p>

        <!-- Gradient Blob for Hero Bg -->
        <div class="hero-blob"></div>

        <div class="rant-mini">
          <p>
            {profile.minibio}
          </p>
          <div class="status-line">
            <span class="status-dot"></span> Status: {profile.status}
          </div>
        </div>

        <div class="cta-row">
          <a href="/projects" class="btn-lab">
            <i class="fi fi-rr-box-alt"></i> Prototypes
          </a>
          <a href="/rants" class="btn btn-ghost">
            <i class="fi fi-rr-megaphone"></i> Read Rants
          </a>
        </div>
      </div>

      <div class="image-side">
        <div class="img-container">
          <!-- Using standard img tag as requested, pointing to public folder -->
          <img
            id="profile-pic"
            src={profile.image}
            alt={profile.name}
            class="profile-img pixelated"
          />
          <div class="tech-ring"></div>
        </div>
        <p class="secret-hint">Psst. Try ?nextjs=sucks</p>
      </div>
    </section>

    <!-- BENTO GRID -->
    <section class="section-bento">
      <div class="section-header">
        <h2>Current State</h2>
      </div>

      <div class="bento-grid">
        <a href="/projects" class="bento-card project-card">
          <div class="card-label">LATEST BUILD</div>
          <h3>{featuredProject ? featuredProject.data.title : "Void OS"}</h3>
          <p>
            {
              featuredProject
                ? featuredProject.data.description
                : "System not found."
            }
          </p>
          <div class="corner-icon"><i class="fi fi-rr-code-simple"></i></div>
        </a>

        <a href="/rants" class="bento-card rant-card">
          <div class="card-label">CURRENT ANGER LEVEL</div>
          <div class="anger-meter">
            <span class="val"
              >{latestRant ? latestRant.data.angerLevel : 99}%</span
            >
          </div>
          <h3>{latestRant ? latestRant.data.title : "Why CSS exists"}</h3>
          <div class="corner-icon"><i class="fi fi-rr-megaphone"></i></div>
        </a>

        <a href="/writing" class="bento-card write-card">
          <div class="card-label">LATEST FICTION</div>
          <h3>{latestStory ? latestStory.data.title : "The Null Pointer"}</h3>
          <p class="excerpt">
            "It wasn't a bug. It was a feature of the universe..."
          </p>
          <div class="corner-icon"><i class="fi fi-rr-edit"></i></div>
        </a>

        <a href="/donate" class="bento-card donate-card" id="bento-donate">
          <h3>FUND THE CHAOS</h3>
          <div class="coin-icon"><i class="fi fi-rr-coins"></i></div>
        </a>

        <a href="/uses" class="bento-card uses-card">
          <i class="fi fi-rr-computer"></i>
          <span>THE STACK</span>
        </a>
      </div>
    </section>

    <!-- SECTION: LATEST RANTS -->
    <section class="content-list">
      <div class="section-header">
        <h2>Recent Rants</h2>
        <a href="/rants" class="view-all">View All</a>
      </div>
      <div class="grid-3">
        {
          rants.slice(0, 3).map((rant) => (
            <a href={`/rants/${rant.slug}`} class="content-card rant">
              <span class="date">
                {rant.data.date.toISOString().split("T")[0]}
              </span>
              <h3>{rant.data.title}</h3>
              <div class="tags">
                {rant.data.tags.slice(0, 2).map((tag) => (
                  <span>#{tag}</span>
                ))}
              </div>
            </a>
          ))
        }
      </div>
    </section>

    <!-- SECTION: SELECTED PROJECTS -->
    <section class="content-list">
      <div class="section-header">
        <h2>Selected Projects</h2>
        <a href="/projects" class="view-all">View All</a>
      </div>
      <div class="grid-2">
        {
          projects.slice(0, 4).map((project) => (
            <a
              href={project.data.link}
              target="_blank"
              class="content-card project"
            >
              <div class="icon-box">
                <i class={project.data.icon || "fi fi-rr-box"} />
              </div>
              <div>
                <h3>{project.data.title}</h3>
                <p>{project.data.description}</p>
              </div>
            </a>
          ))
        }
      </div>
    </section>
  </main>

  <dialog id="sassy-modal">
    <div class="modal-content">
      <h2>I saw that.</h2>
      <p>Thanks for enabling my caffeine addiction.</p>
      <form method="dialog">
        <button>You're welcome</button>
      </form>
    </div>
  </dialog>
</Layout>

<script>
  // EASTER EGG
  const params = new URLSearchParams(window.location.search);
  const img = document.getElementById("profile-pic");
  const hint = document.querySelector(".secret-hint");

  if (params.get("nextjs") === "sucks") {
    img?.classList.remove("pixelated");
    if (hint) hint.innerHTML = "Access Granted.";
  }

  // DONATE MODAL
  const donateBtn = document.getElementById("bento-donate");
  const modal = document.getElementById("sassy-modal") as HTMLDialogElement;

  if (donateBtn && modal) {
    donateBtn.addEventListener("click", (e) => {
      e.preventDefault();
      window.open("https://buymeacoffee.com/itsnony", "_blank");
      modal.showModal();
    });
  }
</script>

<style>
  .home-wrapper {
    max-width: 1400px;
    margin: 0 auto;
    padding: 8rem 1rem 4rem 1rem; /* ADDED PADDING TOP */
  }

  /* HERO SPLIT */
  .hero-split {
    min-height: 85vh;
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    align-items: center;
    gap: 4rem;
    margin-bottom: 4rem;
    position: relative;
  }

  .hero-blob {
    position: absolute;
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, var(--color-primary), transparent 70%);
    opacity: 0.15;
    filter: blur(80px);
    z-index: -1;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
  }

  .hero-name {
    font-family: var(--font-heading);
    font-weight: 900;
    font-size: clamp(3rem, 6vw, 6rem);
    line-height: 1.1;
    margin: 0;
    letter-spacing: -2px;
  }

  .gradient-text {
    background: linear-gradient(
      120deg,
      var(--color-text),
      var(--color-primary)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .dot {
    color: var(--color-primary);
  }

  .hero-bio {
    font-family: "Fraunces", serif;
    font-size: 1.3rem;
    opacity: 0.8;
    margin: 1.5rem 0;
    max-width: 500px;
    line-height: 1.6;
  }

  .rant-mini {
    background: rgba(0, 0, 0, 0.03);
    border-left: 3px solid var(--color-primary);
    padding: 1rem 1.5rem;
    border-radius: 0 12px 12px 0;
    margin-bottom: 2.5rem;
  }
  :global(.dark) .rant-mini {
    background: rgba(255, 255, 255, 0.03);
  }

  .rant-mini p {
    margin: 0;
    font-family: "Fira Code";
    font-size: 0.9rem;
    opacity: 0.7;
  }

  .status-line {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: 0.5rem;
    font-family: "Fira Code";
    font-size: 0.8rem;
    opacity: 0.5;
    text-transform: uppercase;
    letter-spacing: 1px;
  }
  .status-dot {
    width: 8px;
    height: 8px;
    background: #00ff00;
    border-radius: 50%;
    box-shadow: 0 0 10px #00ff00;
  }

  .cta-row {
    display: flex;
    gap: 1.5rem;
    align-items: center;
  }

  .btn-lab {
    background: var(--color-text);
    color: var(--color-bg);
    padding: 1rem 2rem;
    border-radius: 12px;
    font-family: "Fira Code";
    font-weight: 700;
    text-decoration: none;
    transition: transform 0.2s;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }
  .btn-lab:hover {
    transform: translateY(-3px);
  }

  .btn-ghost {
    color: var(--color-text);
    text-decoration: none;
    font-family: "Fira Code";
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    opacity: 0.7;
    transition: opacity 0.2s;
  }
  .btn-ghost:hover {
    opacity: 1;
  }

  /* IMAGE SIDE */
  .image-side {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .img-container {
    position: relative;
    width: 400px;
    height: 400px;
    z-index: 2;
  }

  .profile-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
    transition: all 0.5s ease;
    position: relative;
    z-index: 2;
  }

  .pixelated {
    image-rendering: pixelated;
    filter: contrast(1.2) brightness(0.9);
  }

  .tech-ring {
    position: absolute;
    top: -20px;
    left: -20px;
    right: -20px;
    bottom: -20px;
    border: 2px dashed var(--color-primary);
    border-radius: 50%;
    animation: spin 20s linear infinite;
    opacity: 0.3;
    z-index: 1;
  }

  .secret-hint {
    margin-top: 2rem;
    font-family: "Fira Code";
    font-size: 0.8rem;
    opacity: 0.3;
  }

  @keyframes spin {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  /* BENTO & CONTENT REUSED */
  .section-bento {
    margin-bottom: 6rem;
  }
  .section-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 2rem;
    border-bottom: 1px solid var(--color-border);
    padding-bottom: 1rem;
  }
  .section-header h2 {
    font-family: "Fira Code";
    font-size: 1.2rem;
    opacity: 0.6;
    margin: 0;
    text-transform: uppercase;
  }
  .view-all {
    font-family: "Fira Code";
    font-size: 0.9rem;
    color: var(--color-primary);
    text-decoration: none;
  }

  .bento-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: repeat(2, 250px);
    gap: 1.5rem;
  }
  .bento-card {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 24px;
    padding: 2rem;
    text-decoration: none;
    color: var(--color-text);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    position: relative;
    overflow: hidden;
    transition: transform 0.3s;
  }
  .bento-card:hover {
    transform: translateY(-5px);
    border-color: var(--color-primary);
  }
  .project-card {
    grid-column: span 2;
  }
  .rant-card {
    grid-column: span 1;
    background: linear-gradient(135deg, rgba(255, 0, 128, 0.1), transparent);
  }
  .write-card {
    grid-column: span 1;
    grid-row: span 2;
  }
  .donate-card {
    grid-column: span 1;
    background: var(--color-primary);
    color: white;
    justify-content: center;
    align-items: center;
    text-align: center;
  }
  .donate-card h3 {
    color: white;
    margin: 0;
    z-index: 2;
    font-family: "Fraunces";
  }
  .uses-card {
    grid-column: span 2;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    font-family: "Fira Code";
    font-size: 1.5rem;
  }

  .grid-3 {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    margin-bottom: 6rem;
  }
  .grid-2 {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
    margin-bottom: 6rem;
  }

  .content-card {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    padding: 1.5rem;
    border-radius: 16px;
    text-decoration: none;
    color: var(--color-text);
    transition: all 0.2s;
  }
  .content-card:hover {
    border-color: var(--color-primary);
    transform: translateY(-2px);
  }
  .content-card h3 {
    font-family: "Fraunces";
    margin: 0.5rem 0;
    font-size: 1.4rem;
  }
  .date {
    font-family: "Fira Code";
    font-size: 0.8rem;
    opacity: 0.5;
  }
  .tags {
    display: flex;
    gap: 0.5rem;
    margin-top: 1rem;
  }
  .tags span {
    background: rgba(0, 0, 0, 0.05);
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    font-size: 0.7rem;
    font-family: "Fira Code";
  }

  .project {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
  }
  .icon-box {
    font-size: 2rem;
    color: var(--color-primary);
    opacity: 0.8;
  }

  /* MODAL */
  dialog {
    border: none;
    border-radius: 16px;
    background: var(--color-surface);
    border: 1px solid var(--color-primary);
    padding: 0;
    box-shadow: 0 10px 50px rgba(0, 0, 0, 0.5);
    color: var(--color-text);
  }
  dialog::backdrop {
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(5px);
  }
  .modal-content {
    padding: 2rem;
    text-align: center;
  }
  .modal-content button {
    background: var(--color-text);
    color: var(--color-bg);
    border: none;
    padding: 0.8rem 1.5rem;
    border-radius: 50px;
    cursor: pointer;
    font-weight: bold;
    margin-top: 1rem;
  }

  @media (max-width: 900px) {
    .hero-split {
      grid-template-columns: 1fr;
      text-align: center;
    }
    .image-side {
      order: -1;
      margin-bottom: 2rem;
    }
    .bento-grid {
      grid-template-columns: 1fr;
    }
    .project-card,
    .rant-card,
    .write-card,
    .donate-card,
    .uses-card {
      grid-column: span 1;
      grid-row: span 1;
    }
    .grid-3,
    .grid-2 {
      grid-template-columns: 1fr;
    }
  }
</style>
