---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

const projects = (await getCollection("projects")).sort(
    (a, b) => b.data.year - a.data.year,
);
---

<Layout title="Projects | Nony">
    <main class="projects-wrapper">
        <header class="page-header">
            <h1><span class="highlight">PROTOTYPES</span></h1>
            <p>Experiments, hacks, and open source chaos.</p>
        </header>

        <div class="projects-grid">
            {
                projects.map((project) => (
                    <a href={project.data.link} class="glass-card" target="_blank">
                        <!-- Icon Header -->
                        <div class="card-header">
                            <div class="icon-box">
                                <i class={project.data.icon || "fi fi-rr-box"} />
                            </div>
                            <span class="year">{project.data.year}</span>
                        </div>
                        
                        <!-- Content -->
                        <div class="card-body">
                            <h3>{project.data.title}</h3>
                            <p>{project.data.description}</p>
                        </div>

                        <!-- Footer / Tech -->
                        <div class="card-footer">
                            <div class="tech-stack">
                                {project.data.tech.slice(0, 3).map((t) => (
                                    <span>{t}</span>
                                ))}
                                {project.data.tech.length > 3 && <span>+</span>}
                            </div>
                            <span class="arrow-link">&rarr;</span>
                        </div>
                    </a>
                ))
            }
        </div>
    </main>
</Layout>

<style>
    .projects-wrapper {
        padding: 8rem 2rem 4rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .page-header {
        text-align: center;
        margin-bottom: 6rem;
    }
    .page-header h1 {
        font-family: "Fira Code", monospace;
        font-size: 3rem;
        font-weight: 900;
        margin: 0;
    }
    .highlight {
        color: var(--color-primary);
        text-shadow: 0 0 20px rgba(var(--color-primary-rgb), 0.3);
    }
    .page-header p {
        font-family: "Fraunces", serif;
        font-size: 1.2rem;
        opacity: 0.6;
        margin-top: 1rem;
    }

    .projects-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 2rem;
    }

    /* GLASS CARD */
    .glass-card {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 24px;
        padding: 2rem;
        text-decoration: none;
        color: var(--color-text);
        transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        min-height: 280px;
        position: relative;
        overflow: hidden;
    }
    
    :global(.light) .glass-card {
        background: rgba(0, 0, 0, 0.02);
        border-color: rgba(0, 0, 0, 0.1);
    }

    .glass-card:hover {
        background: rgba(255, 255, 255, 0.06);
        border-color: var(--color-primary);
        transform: translateY(-5px);
        box-shadow: 0 20px 40px rgba(0,0,0,0.1);
    }

    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 2rem;
    }

    .icon-box {
        font-size: 2rem;
        color: var(--color-primary);
        background: rgba(var(--color-primary-rgb), 0.1);
        width: 50px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 12px;
    }

    .year {
        font-family: "Fira Code", monospace;
        font-size: 0.8rem;
        opacity: 0.4;
        border: 1px solid var(--color-border);
        padding: 0.2rem 0.5rem;
        border-radius: 50px;
    }

    .card-body h3 {
        font-family: "Fraunces", serif;
        font-size: 1.5rem;
        margin: 0 0 0.5rem 0;
    }
    .card-body p {
        font-size: 0.95rem;
        opacity: 0.7;
        line-height: 1.6;
        margin: 0;
    }

    .card-footer {
        margin-top: 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .tech-stack {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }
    .tech-stack span {
        font-family: "Fira Code", monospace;
        font-size: 0.75rem;
        opacity: 0.6;
        background: rgba(127, 127, 127, 0.1);
        padding: 0.2rem 0.5rem;
        border-radius: 4px;
    }
    
    .arrow-link {
        font-size: 1.2rem;
        opacity: 0;
        transform: translateX(-10px);
        transition: all 0.3s;
        color: var(--color-primary);
    }
    .glass-card:hover .arrow-link {
        opacity: 1;
        transform: translateX(0);
    }

</style>
