---
import Layout from "../layouts/Layout.astro";
---

<Layout title="undefined | Nony" voidMode={true}>
    <canvas id="flow-field"></canvas>
    <div id="controls">
        <div class="control-group">
            <label>Particles</label>
            <span id="particle-count">2000</span>
        </div>
        <div class="control-group">
            <label>Field Scale</label>
            <span id="scale-val">0.005</span>
        </div>
        <p class="hint">Click & Drag to disrupt the field.</p>
    </div>
</Layout>

<script>
    // SIMPLEX NOISE IMPLEMENTATION (Ported for speed)
    // --------------------------------------------------------
    const Permutation = [
        151, 160, 137, 91, 90, 15, 131, 13, 201, 95, 96, 53, 194, 233, 7, 225,
        140, 36, 103, 30, 69, 142, 8, 99, 37, 240, 21, 10, 23, 190, 6, 148, 247,
        120, 234, 75, 0, 26, 197, 62, 94, 252, 219, 203, 117, 35, 11, 32, 57,
        177, 33, 88, 237, 149, 56, 87, 174, 20, 125, 136, 171, 168, 68, 175, 74,
        165, 71, 134, 139, 48, 27, 166, 77, 146, 158, 231, 83, 111, 229, 122,
        60, 211, 133, 230, 220, 105, 92, 41, 55, 46, 245, 40, 244, 102, 143, 54,
        65, 25, 63, 161, 1, 216, 80, 73, 209, 76, 132, 187, 208, 89, 18, 169,
        200, 196, 135, 130, 116, 188, 159, 86, 164, 100, 109, 198, 173, 186, 3,
        64, 52, 217, 226, 250, 124, 123, 5, 202, 38, 147, 118, 126, 255, 82, 85,
        212, 207, 206, 59, 227, 47, 16, 58, 17, 182, 189, 28, 42, 223, 183, 170,
        213, 119, 248, 152, 2, 44, 154, 163, 70, 221, 153, 101, 155, 167, 43,
        172, 9, 129, 22, 39, 253, 19, 98, 108, 110, 79, 113, 224, 232, 178, 185,
        112, 104, 218, 246, 97, 228, 251, 34, 242, 193, 238, 210, 144, 12, 191,
        179, 162, 241, 81, 51, 145, 235, 249, 14, 239, 107, 49, 192, 214, 31,
        181, 199, 106, 157, 184, 84, 204, 176, 115, 121, 50, 45, 127, 4, 150,
        254, 138, 236, 205, 93, 222, 114, 67, 29, 24, 72, 243, 141, 128, 195,
        78, 66, 215, 61, 156, 180,
    ];
    const P = new Array(512);
    for (let i = 0; i < 256; i++) P[256 + i] = P[i] = Permutation[i];

    function noise(x: number, y: number, z: number) {
        const X = Math.floor(x) & 255,
            Y = Math.floor(y) & 255,
            Z = Math.floor(z) & 255;
        x -= Math.floor(x);
        y -= Math.floor(y);
        z -= Math.floor(z);
        const u = fade(x),
            v = fade(y),
            w = fade(z);
        const A = P[X] + Y,
            AA = P[A] + Z,
            AB = P[A + 1] + Z,
            B = P[X + 1] + Y,
            BA = P[B] + Z,
            BB = P[B + 1] + Z;
        return lerp(
            w,
            lerp(
                v,
                lerp(u, grad(P[AA], x, y, z), grad(P[BA], x - 1, y, z)),
                lerp(u, grad(P[AB], x, y - 1, z), grad(P[BB], x - 1, y - 1, z)),
            ),
            lerp(
                v,
                lerp(
                    u,
                    grad(P[AA + 1], x, y, z - 1),
                    grad(P[BA + 1], x - 1, y, z - 1),
                ),
                lerp(
                    u,
                    grad(P[AB + 1], x, y - 1, z - 1),
                    grad(P[BB + 1], x - 1, y - 1, z - 1),
                ),
            ),
        );
    }
    function fade(t: number) {
        return t * t * t * (t * (t * 6 - 15) + 10);
    }
    function lerp(t: number, a: number, b: number) {
        return a + t * (b - a);
    }
    function grad(hash: number, x: number, y: number, z: number) {
        const h = hash & 15,
            u = h < 8 ? x : y,
            v = h < 4 ? y : h === 12 || h === 14 ? x : z;
        return ((h & 1) === 0 ? u : -u) + ((h & 2) === 0 ? v : -v);
    }
    // --------------------------------------------------------

    const canvas = document.getElementById("flow-field") as HTMLCanvasElement;
    const ctx = canvas.getContext("2d");

    let width = window.innerWidth;
    let height = window.innerHeight;
    canvas.width = width;
    canvas.height = height;

    // CONFIG
    const PARTICLE_COUNT = 3000;
    const NOISE_SCALE = 0.005;
    const Z_SPEED = 0.0005;
    const OPACITY = 0.1;

    let zOff = 0;

    // MOUSE INTERACTION
    let mouseX = -1000;
    let mouseY = -1000;
    let isMouseDown = false;

    window.addEventListener("mousemove", (e) => {
        mouseX = e.clientX;
        mouseY = e.clientY;
    });
    window.addEventListener("mousedown", () => (isMouseDown = true));
    window.addEventListener("mouseup", () => (isMouseDown = false));

    class Particle {
        x: number;
        y: number;
        vx: number;
        vy: number;
        prevX: number;
        prevY: number;
        color: string;
        life: number;
        maxLife: number;

        constructor() {
            this.x = Math.random() * width;
            this.y = Math.random() * height;
            this.vx = 0;
            this.vy = 0;
            this.prevX = this.x;
            this.prevY = this.y;
            this.color = this.generateColor();
            this.life = Math.random() * 100 + 50;
            this.maxLife = this.life;
        }

        generateColor() {
            // Neon Palette
            const hue = (this.x / width) * 60 + 200; // Blues/Purples
            return `hsla(${hue}, 100%, 50%, ${OPACITY})`;
        }

        update() {
            // Flow Field Force
            const angle =
                noise(this.x * NOISE_SCALE, this.y * NOISE_SCALE, zOff) *
                Math.PI *
                4;

            // Mouse Repulsion/Attraction
            if (isMouseDown) {
                const dx = mouseX - this.x;
                const dy = mouseY - this.y;
                const dist = Math.sqrt(dx * dx + dy * dy);
                if (dist < 300) {
                    this.vx += (dx / dist) * -2; // Repel
                    this.vy += (dy / dist) * -2;
                }
            }

            this.vx += Math.cos(angle) * 0.1;
            this.vy += Math.sin(angle) * 0.1;

            this.vx *= 0.95; // Friction
            this.vy *= 0.95;

            this.prevX = this.x;
            this.prevY = this.y;
            this.x += this.vx;
            this.y += this.vy;

            this.life--;

            // Reset dead particles or out of bounds
            if (
                this.x < 0 ||
                this.x > width ||
                this.y < 0 ||
                this.y > height ||
                this.life < 0
            ) {
                this.reset();
            }
        }

        reset() {
            this.x = Math.random() * width;
            this.y = Math.random() * height;
            this.prevX = this.x;
            this.prevY = this.y;
            this.vx = 0;
            this.vy = 0;
            this.life = Math.random() * 100 + 50;
        }

        draw() {
            if (!ctx) return;
            ctx.strokeStyle = this.color;
            ctx.lineWidth = 1;
            ctx.beginPath();
            ctx.moveTo(this.prevX, this.prevY);
            ctx.lineTo(this.x, this.y);
            ctx.stroke();
        }
    }

    const particles: Particle[] = [];
    for (let i = 0; i < PARTICLE_COUNT; i++) {
        particles.push(new Particle());
    }

    function animate() {
        if (!ctx) return;

        // Trail effect
        ctx.fillStyle = "rgba(0, 0, 0, 0.05)";
        ctx.fillRect(0, 0, width, height);

        zOff += Z_SPEED;

        for (const p of particles) {
            p.update();
            p.draw();
        }

        requestAnimationFrame(animate);
    }

    animate();

    window.addEventListener("resize", () => {
        width = window.innerWidth;
        height = window.innerHeight;
        canvas.width = width;
        canvas.height = height;
    });
</script>

<style>
    @import url("https://fonts.googleapis.com/css2?family=Share+Tech+Mono&display=swap");

    :global(body) {
        margin: 0;
        padding: 0;
        overflow: hidden;
        background: #000;
    }

    canvas {
        display: block;
        position: fixed;
        inset: 0;
        z-index: 1;
    }

    #controls {
        position: fixed;
        bottom: 20px;
        left: 20px;
        z-index: 10;
        color: rgba(255, 255, 255, 0.4);
        font-family: "Share Tech Mono", monospace;
        background: rgba(0, 0, 0, 0.5);
        padding: 1rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        backdrop-filter: blur(5px);
        pointer-events: none; /* Just display for now */
    }

    .hint {
        margin: 0;
        font-size: 0.8rem;
    }

    .control-group {
        display: flex;
        justify-content: space-between;
        margin-bottom: 0.5rem;
        font-size: 0.9rem;
        width: 150px;
    }
</style>
