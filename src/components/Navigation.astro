---
import { Image } from "astro:assets";
import logoImage from "../assets/logo.png";
---

<nav class="nav-container">
  <div class="nav-content">
    <a href="/" class="logo">
      <Image
        src={logoImage}
        alt="Nony.cc"
        width={36}
        height={36}
        loading="eager"
      />
    </a>
    <div class="links">
      <a href="/projects" class="nav-link">
        <i class="fi fi-rr-code-simple"></i>
        <span>Projects</span>
      </a>
      <a href="/writing" class="nav-link">
        <i class="fi fi-rr-edit"></i>
        <span>Writing</span>
      </a>
      <a href="/blog" class="nav-link">
        <i class="fi fi-rr-book-alt"></i>
        <span>Blog</span>
      </a>
      <a href="/rants" class="nav-link">
        <i class="fi fi-rr-megaphone"></i>
        <span>Rants</span>
      </a>
      <a href="/uses" class="nav-link">
        <i class="fi fi-rr-computer"></i>
        <span>Uses</span>
      </a>
      <a href="/donate" class="nav-link highlight">
        <i class="fi fi-rr-heart"></i>
        <span>Donate</span>
      </a>
    </div>

    <button id="mobile-toggle" class="mobile-toggle" aria-label="Menu">
      <i class="fi fi-rr-menu-burger" id="menu-icon"></i>
    </button>

    <button id="theme-toggle" class="theme-btn" aria-label="Toggle Theme">
      <i class="fi fi-rr-moon-stars" id="theme-icon"></i>
    </button>
  </div>
</nav>

<script is:inline>
  const STORAGE_KEY = "nony-theme-v2";

  // Theme Logic
  const theme = (() => {
    if (
      typeof localStorage !== "undefined" &&
      localStorage.getItem(STORAGE_KEY)
    ) {
      return localStorage.getItem(STORAGE_KEY);
    }
    return "dark";
  })();

  if (theme === "dark") {
    document.documentElement.classList.add("dark");
  } else {
    document.documentElement.classList.remove("dark");
  }

  window.localStorage.setItem(STORAGE_KEY, theme);

  document.addEventListener("astro:page-load", () => {
    // Theme Toggle
    const handleToggleClick = () => {
      const element = document.documentElement;
      element.classList.toggle("dark");
      const isDark = element.classList.contains("dark");
      localStorage.setItem(STORAGE_KEY, isDark ? "dark" : "light");
      updateIcon(isDark);
    };

    const updateIcon = (isDark) => {
      const icon = document.getElementById("theme-icon");
      if (icon) {
        icon.classList.remove(isDark ? "fi-rr-moon-stars" : "fi-rr-sun");
        icon.classList.add(isDark ? "fi-rr-sun" : "fi-rr-moon-stars");
      }
    };

    const toggle = document.getElementById("theme-toggle");
    if (toggle) {
      const newToggle = toggle.cloneNode(true);
      toggle.parentNode.replaceChild(newToggle, toggle);
      newToggle.addEventListener("click", handleToggleClick);
      updateIcon(document.documentElement.classList.contains("dark"));
    }

    // Mobile Menu Logic
    const mobileBtn = document.getElementById("mobile-toggle");
    const linksContainer = document.querySelector(".links");
    const menuIcon = document.getElementById("menu-icon");
    let isMenuOpen = false;

    if (mobileBtn && linksContainer) {
      mobileBtn.addEventListener("click", () => {
        isMenuOpen = !isMenuOpen;
        linksContainer.classList.toggle("active");
        document.body.classList.toggle("menu-open");

        // Icon Swap
        if (menuIcon) {
          menuIcon.classList.remove(
            isMenuOpen ? "fi-rr-menu-burger" : "fi-rr-cross",
          );
          menuIcon.classList.add(
            isMenuOpen ? "fi-rr-cross" : "fi-rr-menu-burger",
          );
        }
      });

      // Close when clicking a link
      document.querySelectorAll(".nav-link").forEach((link) => {
        link.addEventListener("click", () => {
          isMenuOpen = false;
          linksContainer.classList.remove("active");
          document.body.classList.remove("menu-open");
          if (menuIcon) {
            menuIcon.classList.remove("fi-rr-cross");
            menuIcon.classList.add("fi-rr-menu-burger");
          }
        });
      });
    }
  });

  document.addEventListener("astro:after-swap", () => {
    if (localStorage.getItem(STORAGE_KEY) === "light") {
      document.documentElement.classList.remove("dark");
    } else {
      document.documentElement.classList.add("dark");
    }
    // Clean up body class if navigating away with menu open
    document.body.classList.remove("menu-open");
  });
</script>

<style>
  .nav-container {
    position: fixed;
    top: 2rem;
    left: 0;
    width: 100%;
    display: flex;
    justify-content: center;
    z-index: 10000;
    pointer-events: none;
  }

  .nav-content {
    pointer-events: auto;
    background: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    border: 1px solid rgba(0, 0, 0, 0.08);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    padding: 0.5rem 0.8rem;
    border-radius: 50px;
    display: flex;
    align-items: center;
    gap: 1rem;
    transition: all 0.3s ease;
  }

  :global(.dark) .nav-content {
    background: rgba(20, 20, 20, 0.8);
    border-color: rgba(255, 255, 255, 0.1);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.4);
  }

  .logo {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    position: relative;
    z-index: 11000; /* Above mobile menu */
  }

  /* GLOW BLOB */
  .logo::before {
    content: "";
    position: absolute;
    width: 150%;
    height: 150%;
    background: radial-gradient(circle, var(--color-primary), transparent 70%);
    opacity: 0.5;
    filter: blur(15px);
    z-index: -1;
    animation: logoPulse 4s ease-in-out infinite;
  }

  @keyframes logoPulse {
    0%,
    100% {
      transform: scale(0.8);
      opacity: 0.3;
    }
    50% {
      transform: scale(1.2);
      opacity: 0.6;
    }
  }

  .logo img {
    border-radius: 50%;
    transition: transform 0.3s;
  }
  .logo:hover img {
    transform: rotate(10deg) scale(1.1);
  }

  .links {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .nav-link {
    text-decoration: none;
    color: var(--color-text);
    font-size: 0.9rem;
    font-weight: 500;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: center; /* Added */
    gap: 0.5rem;
    transition: all 0.2s;
    opacity: 0.7;
    white-space: nowrap;
    line-height: 1; /* Reset */
  }

  .nav-link:hover {
    background: rgba(0, 0, 0, 0.05);
    opacity: 1;
  }
  :global(.dark) .nav-link:hover {
    background: rgba(255, 255, 255, 0.1);
  }

  .nav-link i {
    font-size: 1.1rem;
    display: flex; /* Ensure icon is flex container or block to respect alignment */
    align-items: center;
    line-height: 0; /* Remove font line-height weirdness */
    padding-top: 2px; /* Optical adjustment */
  }

  /* Distinct Donate Button */
  .nav-link.highlight {
    color: #fff;
    background: linear-gradient(135deg, var(--color-primary), #ff0080);
    opacity: 1;
    padding: 0.5rem 1.2rem;
    box-shadow: 0 4px 12px rgba(var(--color-primary-rgb), 0.3);
    animation: donatePulse 2s infinite;
  }
  .nav-link.highlight:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(var(--color-primary-rgb), 0.5);
    opacity: 1;
    animation: none; /* Stop pulsing on hover */
  }

  @keyframes donatePulse {
    0% {
      transform: scale(1);
      box-shadow: 0 0 0 0 rgba(255, 0, 128, 0.4);
    }
    70% {
      transform: scale(1.05);
      box-shadow: 0 0 0 10px rgba(255, 0, 128, 0);
    }
    100% {
      transform: scale(1);
      box-shadow: 0 0 0 0 rgba(255, 0, 128, 0);
    }
  }

  .theme-btn {
    background: transparent;
    border: none;
    color: var(--color-text);
    cursor: pointer;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s;
    opacity: 0.7;
    z-index: 11000;
  }
  .theme-btn:hover {
    background: rgba(0, 0, 0, 0.05);
    opacity: 1;
  }
  :global(.dark) .theme-btn:hover {
    background: rgba(255, 255, 255, 0.1);
  }
  .theme-btn i {
    font-size: 1.2rem;
  }

  /* Mobile Toggle */
  .mobile-toggle {
    display: none;
    background: transparent;
    border: none;
    color: var(--color-text);
    cursor: pointer;
    font-size: 1.5rem;
    z-index: 11000;
    padding: 0.5rem;
  }

  @media (max-width: 800px) {
    .nav-content {
      padding: 0.4rem 1rem;
    }

    .mobile-toggle {
      display: block;
    }

    .links {
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      background: rgba(255, 255, 255, 0.98);
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 2rem;
      transform: translateX(100%);
      transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      z-index: 10000;
      pointer-events: none; /* Initially hidden */
    }

    :global(.dark) .links {
      background: rgba(10, 10, 10, 0.98);
    }

    .links.active {
      transform: translateX(0);
      pointer-events: auto;
    }

    .nav-link {
      font-size: 1.5rem;
      padding: 1rem 2rem;
      width: auto;
    }

    .nav-link i {
      font-size: 1.8rem;
    }

    .nav-link.highlight {
      margin-top: 1rem;
      transform: scale(1.1);
    }

    /* Prevent body scroll when menu open */
    :global(body.menu-open) {
      overflow: hidden;
    }
  }
</style>
