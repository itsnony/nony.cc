---
import { Image } from "astro:assets";
import logoImage from "../assets/logo.png";
import config from "../config.json";

const { socials, profile } = config;
const currentYear = new Date().getFullYear();
---

<footer class="main-footer">
  <div class="footer-grid">
    <!-- COL 1: IDENTITY -->
    <div class="footer-col identity">
      <a href="/" class="footer-logo">
        <Image src={logoImage} alt="Nony" width={40} height={40} />
        <span class="logo-text">NONY</span>
      </a>
      <p class="tagline">
        "I turn coffee into code and anxiety into features."
      </p>
      <div class="socials">
        {
          Object.entries(socials).map(([key, url]) => {
            if (!url) return null;
            let iconClass = "fi fi-rr-globe";
            if (key === "email") iconClass = "fi fi-rr-envelope";
            else if (key === "github") iconClass = "fi fi-brands-github";
            else if (key === "twitter") iconClass = "fi fi-brands-twitter";
            else if (key === "linkedin") iconClass = "fi fi-brands-linkedin";
            else if (key === "instagram") iconClass = "fi fi-brands-instagram";
            else if (key === "discord") iconClass = "fi fi-brands-discord";
            else if (key === "bluesky") iconClass = "fa-brands fa-bluesky";

            const href = key === "email" ? `mailto:${url}` : url;
            return (
              <a
                href={href}
                target={key === "email" ? "_self" : "_blank"}
                aria-label={key}
              >
                <i class={iconClass} />
              </a>
            );
          })
        }
      </div>
    </div>

    <!-- COL 2: SITEMAP -->
    <div class="footer-col links">
      <h4>EXPLORE</h4>
      <a href="/projects">Projects</a>
      <a href="/writing">Writing</a>
      <a href="/blog">Blog</a>
      <a href="/rants">Rants</a>
      <a href="/uses">Uses</a>
    </div>

    <!-- COL 3: SUPPORT -->
    <div class="footer-col links">
      <h4>SUPPORT</h4>
      <a href="/donate">Donate</a>
      <!-- Removing Sponsors as requested -->
    </div>
  </div>

  <div class="footer-bottom">
    <span class="copyright">&copy; {currentYear} {profile.name}</span>
    <span class="made-with">Built with Astro & Anxiety</span>
  </div>
</footer>

<style>
  .main-footer {
    border-top: 1px solid var(--color-border);
    margin-top: 6rem;
    padding: 4rem 2rem 2rem 2rem;
    background: var(--color-surface);
  }

  .footer-grid {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 2fr 1fr 1fr;
    gap: 4rem;
    margin-bottom: 3rem;
  }

  /* COLUMNS */
  .footer-col {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .footer-logo {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    text-decoration: none;
    color: var(--color-text);
    font-size: 1.5rem;
    font-weight: 900;
    font-family: "Fira Code", monospace;
  }

  .tagline {
    opacity: 0.6;
    max-width: 300px;
    line-height: 1.6;
    font-size: 0.9rem;
  }

  h4 {
    font-family: "Fira Code", monospace;
    font-size: 0.8rem;
    opacity: 0.5;
    margin: 0 0 0.5rem 0;
    letter-spacing: 1px;
  }

  .links a {
    text-decoration: none;
    color: var(--color-text);
    opacity: 0.8;
    transition: all 0.2s;
    font-size: 0.95rem;
  }
  .links a:hover {
    opacity: 1;
    transform: translateX(5px);
    color: var(--color-primary);
  }

  .socials {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
  }
  .socials a {
    color: var(--color-text);
    font-size: 1.2rem;
    opacity: 0.7;
    transition: transform 0.2s;
  }
  .socials a:hover {
    opacity: 1;
    transform: translateY(-2px);
  }

  .footer-bottom {
    max-width: 1200px;
    margin: 0 auto;
    border-top: 1px solid var(--color-border);
    padding-top: 2rem;
    display: flex;
    justify-content: space-between;
    font-size: 0.85rem;
    opacity: 0.6;
    font-family: "Fira Code", monospace;
  }

  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    .footer-bottom {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }
  }
</style>
